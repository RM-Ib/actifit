<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:id="@+id/entryContainer">

    <TextView
        android:id="@+id/entryRank"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userProfilePic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/actifit_logo"
        app:civ_border_width="0dp"
        android:layout_gravity="top|center"
        android:paddingEnd="3dp"
        />

    <TextView
        android:id="@+id/userName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/activityCount"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|end">

        <TextView
            android:id="@+id/entryDetailsBtn"
            style="@style/AppTheme.ActifitButton"
            android:layout_width="40sp"
            android:layout_height="40sp"

            android:fontFamily="@font/font_awesome_6_solid"
            android:text="\uf15c"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>