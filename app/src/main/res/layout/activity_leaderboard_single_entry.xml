<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:layout_gravity="center_horizontal"
    android:id="@+id/entryContainer">

    <TextView
        android:id="@+id/entryRank"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        />

    <FrameLayout android:id="@+id/picFrame"
        android:layout_width="36dp"
        android:layout_height="wrap_content"

        >

        <ImageView android:id="@+id/userProfilePic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/actifit_logo" />

        <ImageView android:id="@+id/circle_crop"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/circle_crop" />

    </FrameLayout>

    <TextView
        android:id="@+id/userName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/activityCount"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <TextView
            android:id="@+id/entryDetailsBtn"
            style="@style/AppTheme.ActifitButton"
            android:layout_width="50sp"
            android:layout_height="50sp"

            android:fontFamily="@font/font_awesome_6_solid"
            android:text="\uf15c"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>