<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- TextView for the Workout Name -->
    <TextView
        android:id="@+id/workoutNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="?android:attr/textColorPrimary"
        tools:text="My Awesome Workout Plan" /> <!-- tools:text is for design view preview -->

    <!-- TextView for the Workout Timestamp (Date/Time) -->
    <TextView
        android:id="@+id/workoutTimestampTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="?android:attr/textColorSecondary"
        tools:text="Saved on 2023-10-27 10:30" /> <!-- tools:text for design view preview -->

</LinearLayout>